# Application
APP_NAME=Code Clash Platform
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/code
DATABASE_POOL_SIZE=30
DATABASE_MAX_OVERFLOW=20

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=180
REFRESH_TOKEN_EXPIRE_DAYS=1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Code Execution
CODE_EXECUTION_TIMEOUT=5
CODE_EXECUTION_MEMORY_LIMIT=256
MAX_CODE_SIZE=51200
TEMP_DIR=../temp

# File Paths
QUESTIONS_DIR=../questions
TESTCASES_DIR=../testcases
EXPORTS_DIR=../exports

# Logging
LOG_LEVEL=INFO
LOG_FILE=../logs/app.log

# CORS (add your server IP for LAN deployment)
CORS_ORIGINS=["http://localhost:3000"]

# Admin (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately
