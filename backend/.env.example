# Application
APP_NAME=Code Clash Platform
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/code
DATABASE_POOL_SIZE=30
DATABASE_MAX_OVERFLOW=20

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=180
REFRESH_TOKEN_EXPIRE_DAYS=1
MAX_REFRESH_TOKEN_FAMILY_SIZE=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
LOGIN_RATE_LIMIT_PER_MINUTE=10
LOGIN_RATE_LIMIT_PER_HOUR=50
HIGH_COST_RATE_LIMIT_PER_MINUTE=30
HIGH_COST_RATE_LIMIT_PER_HOUR=120

# Code Execution
CODE_EXECUTION_TIMEOUT=5
CODE_EXECUTION_MEMORY_LIMIT=256
MAX_CODE_SIZE=51200
EXECUTION_MAX_PROCESSES=10
TEMP_DIR=../temp

# Worker queue
RUN_EMBEDDED_WORKER=true
WORKER_POLL_INTERVAL_SECONDS=1.0
WORKER_MAX_RETRIES=1
WORKER_BATCH_SIZE=1

# File Paths
QUESTIONS_DIR=../questions
TESTCASES_DIR=../testcases
EXPORTS_DIR=../exports

# Logging
LOG_LEVEL=INFO
LOG_FILE=../logs/app.log

# CORS (add your server IP for LAN deployment)
CORS_ORIGINS=["http://localhost:3000"]

# Admin (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately

# Terminal package installs
ENABLE_TERMINAL_INSTALLS=false
TERMINAL_MAX_PACKAGES_PER_COMMAND=3
TERMINAL_MAX_INSTALLS_PER_USER_PER_HOUR=10
ALLOWED_PIP_PACKAGES=["numpy","pandas","scipy","sympy","networkx","requests"]

# Database initialization mode
# migrate | create_all | off
DB_INIT_MODE=migrate
DB_REQUIRE_HEAD=true
