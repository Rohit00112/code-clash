# Docker Compose runtime variables

# Public port for frontend (users connect here)
FRONTEND_PORT=3000

# PostgreSQL credentials
POSTGRES_DB=codeclash_db
POSTGRES_USER=codeclash
POSTGRES_PASSWORD=change_this_postgres_password

# Backend application credentials
# Use: openssl rand -hex 32
SECRET_KEY=replace_with_a_64_hex_char_secret_key
ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace_with_a_strong_admin_password

# JSON array string for allowed browser origins
# Example: ["http://your-server-ip:3000","http://localhost:3000"]
CORS_ORIGINS=["http://localhost:3000"]

# Optional tuning
BACKEND_WORKERS=4
RUN_EMBEDDED_WORKER=true
